@model TabloidMVC.Models.ViewModels.AddPostTagViewModel

@{
    ViewData["Title"] = "AddPostTag";
}

<div class="container pt-5">
    <h1>Add Tag</h1>

    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="AddPostTag">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <input asp-for="PostTag.PostId" type="hidden" value="@Model.PostTag.PostId"/>
                </div>

                <div class="form-group">
                    <label asp-for="PostTag.TagId" class="control-label"></label>
                    <select asp-for="PostTag.TagId" class="form-control">
                        <option value="">Add Tag</option>
                        @foreach (Tag tag in Model.Tags)
                        {
                            <option value="@tag.Id">@tag.Name</option>
                        }
                    </select>
                    <span asp-validation-for="PostTag.TagId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Add" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="ManageTags" asp-route-id="@Model.PostId">Cancel</a>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
