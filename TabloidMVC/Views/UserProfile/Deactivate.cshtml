@model TabloidMVC.Models.UserProfile

@{
    ViewData["Title"] = "Deactivate";
}

<div class="container pt-5">

    <h1>Deactivate</h1>

    <h4>Are you sure you want to deactivate @Model.FullName?</h4>
    <hr />
    <dl class="row">

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FullName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FullName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserType.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserType.Name)
        </dd>
    </dl>

    <form asp-action="Deactivate">
        <input type="submit" value="Confirm" class="btn btn-danger" /> |
        <a asp-action="Index">Cancel</a>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
