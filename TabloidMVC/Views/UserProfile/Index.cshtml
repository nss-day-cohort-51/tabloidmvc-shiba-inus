@model TabloidMVC.Models.ViewModels.UserProfileIndexViewModel

@{
    ViewData["Title"] = "Index";
}


<div class="container pt-5">
    <h1>Users</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    Full Name
                </th>
                <th>
                    Display Name
                </th>
                <th>
                    User Type
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.UserProfiles)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FullName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DisplayName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserType.Name)
                    </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary mx-1" title="View">
                            <i class="fas fa-eye"></i>
                        </a>
                        <a asp-action="EditUserType" asp-route-id="@item.Id" class="btn btn-outline-primary mx-1" title="Edit">
                            <i class="fas fa-pencil-alt"></i>
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-primary mx-1" title="Delete">
                            <i class="fas fa-trash"></i>
                        </a>
                        @if (Model.IsAdmin)
                        {
                            <a asp-action="Deactivate" asp-route-id="@item.Id" class="btn btn-outline-primary mx-1"
                        title="Deactivate">
                                Deactivate
                            </a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
    @if (Model.IsAdmin)
    {
        <a asp-action="ViewDeactivated" class="btn btn-outline-primary mx-1" title="View Deactivated">
            View Deactivated
        </a>

    }
</div>